{
  "name": "portfolio-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=portfolio",
    "dev:terminal": "npm run dev --workspace=terminal-server",
    "build": "npm run build --workspace=portfolio",
    "build:terminal": "npm run build --workspace=terminal-server",
    "lint": "npm run lint --workspaces --if-present",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "husky": "^9.1.4"
  }
}
