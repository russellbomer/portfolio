{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "typescript": {},
      "node": { "extensions": [".js", ".jsx", ".ts", ".tsx"] }
    }
  },
  "rules": {
    "import/no-cycle": "warn"
  },
  "overrides": [
    {
      "files": [
        "app/**/*.{ts,tsx}",
        "components/**/*.{ts,tsx}",
        "lib/**/*.{ts,tsx}"
      ]
    },
    {
      "files": [
        "lib/auth/**",
        "lib/payments/**",
        "app/api/**",
        "app/(login)/**",
        "app/api/**"
      ],
      "rules": {
        "no-restricted-imports": "off"
      }
    },
    {
      "files": ["**/*.{ts,tsx,js,jsx}"]
    }
  ]
}
